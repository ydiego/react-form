{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/types/global.ts"]
}